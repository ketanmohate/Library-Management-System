<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>View Categories</title>
  <link rel="stylesheet" href="/css/viewCategories.css" />
</head>

<body>
  <%- include('adminNav.ejs') %>

  <div class="Fcontiner">
    <div class="fSidebar">
      <%- include('adminSidebar.ejs') %>
    </div>

    <div class="fMainContent">
      <div class="form-wrapper">
        <h2 class="form-heading">Category List</h2>

        <div class="form-group">
          <input type="text" class="search-box" placeholder="🔍 Search Category" onkeyup="searchCategories(this.value)" />
        </div>

        <table class="custom-table">
          <thead>
            <tr>
              <th>Sr.No</th>
              <th>Name</th>
              <th>Update</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody id="tableBody">
            <% if(cat.length === 0) { %>
              <tr>
                <td colspan="4" class="no-data">No data available 😥...</td>
              </tr>
            <% } else { %>
              <% cat.forEach((item, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= item.name %></td>
                  <td>
                    <a href="/beforeUpdateCat?id=<%= item.id %>" class="btn-update">Update</a>
                  </td>
                  <td>
                    <a href="/deleteCategores?id=<%= item.id %>" class="btn-delete" onclick="return confirm('Are you sure you want to delete this category?')">Delete</a>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>

</html>
