<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Issued Books</title>
  <link rel="stylesheet" href="/css/viewIssuedBooks.css" />
</head>
<body>
  <%- include('adminNav.ejs') %>

  <div class="Fcontiner">
    <div class="fSidebar">
      <%- include('adminSidebar.ejs') %>
    </div>

    <div class="fMainContent">
      <h2 class="page-title">ðŸ“š List of Issued Books</h2>

      <table class="issued-books-table">
        <thead>
          <tr>
            <th>Sr</th>
            <th>Book Title</th>
            <th>Author</th>
            <!-- <th>ISBN</th> -->
            <th>Category</th>
            <th>Issued To</th>
            <th>Email</th>
            <th>Issue Date</th>
            <th>Return Date</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% issuedBooks.forEach((issue, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= issue.book_title %></td>
              <td><%= issue.author %></td>
              <!-- <td><%= issue.isbn %></td> -->
              <td><%= issue.category_name %></td>
              <td><%= issue.user_name %></td>
              <td><%= issue.email %></td>
              <td><%= issue.issue_date.toISOString().split('T')[0] %></td>
              <td><%= issue.return_date.toISOString().split('T')[0] %></td>
              <td><%= issue.status %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
