<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sidebar</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/adminSidebar.css" />
</head>

<body>
  <div class="sidebar">
    <div class="sidebar-title">Dashboard</div>

    <div class="accordion" id="sidebarAccordion">
      <!-- Student -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#studentMenu">
            <i class="bi bi-person-fill me-2"></i> Student
          </button>
        </h2>
        <div id="studentMenu" class="accordion-collapse collapse" data-bs-parent="#sidebarAccordion">
          <div class="accordion-body">
            <a href="/addSudentPage" class="dropdown-link"><i class="bi bi-plus-circle me-2"></i>Add Student</a>
            <a href="/viewstud" class="dropdown-link"><i class="bi bi-card-list me-2"></i>View Student</a>
          </div>
        </div>
      </div>

      <!-- Category -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#categoryMenu">
            <i class="bi bi-journal-text me-2"></i> Category
          </button>
        </h2>
        <div id="categoryMenu" class="accordion-collapse collapse" data-bs-parent="#sidebarAccordion">
          <div class="accordion-body">
            <a href="/categorie" class="dropdown-link"><i class="bi bi-plus-circle me-2"></i>Add Category</a>
            <a href="/viewcategorie" class="dropdown-link"><i class="bi bi-card-list me-2"></i>View Category</a>
          </div>
        </div>
      </div>

      <!-- Books -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#booksMenu">
            <i class="bi bi-book me-2"></i> Books
          </button>
        </h2>
        <div id="booksMenu" class="accordion-collapse collapse" data-bs-parent="#sidebarAccordion">
          <div class="accordion-body">
            <a href="#" class="dropdown-link"><i class="bi bi-plus-circle me-2"></i>Add Book</a>
            <a href="#" class="dropdown-link"><i class="bi bi-journals me-2"></i>View Books</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/adminSidebar.js"></script>
</body>

</html>
