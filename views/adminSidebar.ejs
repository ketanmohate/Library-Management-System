<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Sidebar</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/adminSidebar.css">
</head>

<body>
  <!-- Sidebar -->
  <div class="sidebar bg-white">
    <h4 class="sidebar-title">ðŸ“Š Dashboard</h4>

    <div class="accordion accordion-flush" id="sidebarAccordion">

      <!-- Student -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#studentMenu">
            <i class="bi bi-person-fill me-2"></i> Student
          </button>
        </h2>
        <div id="studentMenu" class="accordion-collapse collapse" data-bs-parent="#sidebarAccordion">
          <div class="accordion-body p-0">
            <ul class="list-group list-group-flush">
              <li><a href="/addSudentPage" class="list-group-item">Add Student</a></li>
              <li><a href="/viewstud" class="list-group-item">View Student</a></li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Category -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#categoryMenu">
            <i class="bi bi-journal-text me-2"></i> Category
          </button>
        </h2>
        <div id="categoryMenu" class="accordion-collapse collapse" data-bs-parent="#sidebarAccordion">
          <div class="accordion-body p-0">
            <ul class="list-group list-group-flush">
              <li><a href="/categorie" class="list-group-item">Add Category</a></li>
              <li><a href="/viewcategorie" class="list-group-item">View Category</a></li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Books -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#booksMenu">
            <i class="bi bi-book-half me-2"></i> Books
          </button>
        </h2>
        <div id="booksMenu" class="accordion-collapse collapse" data-bs-parent="#sidebarAccordion">
          <div class="accordion-body p-0">
            <ul class="list-group list-group-flush">
              <li><a href="/addbookpage" class="list-group-item">Add Books</a></li>
              <li><a href="/viewAllBooks" class="list-group-item">View Books</a></li>
            </ul>
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
