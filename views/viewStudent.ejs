<!-- viewStudent.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>View Students</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/viewStudent.css" />

  <!-- Scripts -->
  <script src="/js/searchStudent.js" defer></script>
  <script src="/studentNextPage.js" defer></script>
</head>

<body>
  <!-- Include Navbar and Sidebar -->
  <%- include('adminNav.ejs') %>
  <div class="Fcontiner">
    <div class="fSidebar">
      <%- include('adminSidebar.ejs') %>
    </div>
    
    <div class="fMainContent">
      <div class="container my-1">
        <!-- Search Box -->
        <div class="form-group mb-4">
          <input type="text" class="search-box" id="Name" placeholder="🔍 Search Student"
            onkeyup="searchStudents(this.value)">
        </div>

        <!-- Student Table -->
        <div class="table-responsive">
          <table class="custom-table table-hover">
            <thead>
              <tr>
                <th>Sr.No</th>  
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Admission Date</th>
                <th>UPDATE</th>
                <th>DELETE</th>
              </tr>
            </thead>
            <tbody id="tableBody">
              <% if (stud.length === 0) { %>
                <tr>
                  <td colspan="7" class="text-center text-warning">
                    <h5>No data available 😥</h5>
                  </td>
                </tr>
              <% } else { %>
                <% stud.forEach((item, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= item.name %></td>
                    <td><%= item.email %></td>
                    <td><%= item.password %></td>
                    <td><%= item.created_at.toLocaleString() %></td>
                    <td><a href="/beforeUpdateStud?id=<%= item.id %>" class="btn btn-update btn-primary">UPDATE</a></td>
                    <td>
                      <a href="/deleteStudent?id=<%= item.id %>" class="btn btn-delete btn-danger"
                        onclick="return confirm('Are you sure you want to delete this student?')">
                        DELETE
                      </a>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="pagination-controls mt-4 d-flex justify-content-between align-items-center">
          <button id="prevBtn" class="btn btn-nav btn-primary">Previous</button>
          <span id="pageCount" class="text-light">Page 1 of X</span>
          <button id="nextBtn" class="btn btn-nav btn-primary">Next</button>
        </div>
      </div>
    </div>
  </div>
</body>

</html>
