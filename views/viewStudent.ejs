<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Students</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">


    <style>
        .del {
            border: none;
            background-color: red;
            border-radius: 5px;
            width: 100px;
        }

        .del a {
            text-decoration: none;
            color: black;
        }
    </style>
</head>

<body>

    <%- include('homeNav.ejs') %>

    <div class="container">
        <div class="form-group m-5">
            <input type="text" class="form-control" id="courseName" placeholder="Search Students..." onkeyup="searchStudents(this.value)">
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Sr.No</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Role</th>
                    <th>Admission Date</th>
                    <th>UPDATE</th>
                    <th>DELETE</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                <% stud.forEach((item, index) => { %>
                    <tr class="student-item">
                        <td><%= index + 1 %></td>
                        <td><%= item.name %></td>
                        <td><%= item.email %></td>
                        <td><%= item.password %></td>
                        <td><%= item.role %></td>
                        <td><%= item.created_at %></td>
                        <td><a href="#">UPDATE</a></td>
                        <td><button class="del"><a href="#" onclick="return confirm('Are you sure you want to delete this student data?')">DELETE</a></button></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <!-- Pagination Buttons -->
        <div class="d-flex justify-content-between align-items-center">
    <button id="prevBtn" class="btn btn-primary">Previous</button>
    <span id="pageCount">Page 1 of X</span>
    <button id="nextBtn" class="btn btn-primary">Next</button>
</div>

    </div>

   <script src="/studentNextPage.js"></script>

</body>

</html>
