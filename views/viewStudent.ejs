<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="/js/searchStudent.js"></script>

    <style>
        .del {
            border: none;
            background-color: red;
            border-radius: 5px;
            width: 100px;
        }

        .del a {
            text-decoration: none;
            color: black;
        }
    </style>
</head>

<body>
        <div class="container">
            <div class="from-group m-5">
                <input type="text" class="form-control" id="Name" placeholder="Search student..."
                    onkeyup="searchStudents(this.value)">
            </div>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Sr.No</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Role</th>
                        <th>Admission Date</th>
                        <th>UPDATE</th>
                        <th>DELETE</th>

                    </tr>
                </thead>
                <tbody id="tableBody">
                    <% if(stud.length === 0) {%>
                        <tr>
                            <td colspan="8"><h3>No data Availabe ðŸ˜¥...</h3></td>
                        </tr>
                        <% } else {%>
                    <% stud.forEach((item,index)=>{
                        %>
                        <tr>
                            <td>
                                <%=(index+1)%>
                            </td>
                            <td>
                                <%=item.name%>
                            </td>
                            <td>
                                <%=item.email%>
                            </td>
                            <td>
                                <%=item.password%>
                            </td>
                            <td>
                                <%=item.role%>
                            </td>
                            <td>
                                <%=item.created_at%>
                            </td>
                            <td><a href="/?id=<%= item.id %>"></a>UPDATE</a></td>
                            <td>
                                <a href="/deleteStudent?id=<%= item.id %>" class="btn btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this student?')">
                                    DELETE
                                </a>
                            </td>


                        </tr>

                        <% }); %>

                        <%}%>
                </tbody>
            </table>

            <div class="d-flex justify-content-between align-items-center">
                <button id="prevBtn" class="btn btn-primary">Previous</button>
                <span id="pageCount">Page 1 of X</span>
                <button id="nextBtn" class="btn btn-primary">Next</button>
            </div>

        </div>

        <script src="/studentNextPage.js"></script>

</body>

</html>