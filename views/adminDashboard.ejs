<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- <link rel="stylesheet" href="style.css">
    -->
  <link rel="stylesheet" href="/css/adminDashboard.css">
</head>
<body>

<!-- Top Navbar -->
<nav class="navbar navbar-dark bg-primary px-4">
  <a class="navbar-brand fw-bold text-white" href="#">📚 Admin Panel</a>
  <span class="navbar-text text-white">Welcome, Admin</span>
</nav>

<!-- Layout -->
<div class="d-flex">

  <!-- Sidebar -->
  <div class="sidebar bg-light border-end">
    <h4 class="text-primary fw-bold px-3 pt-3 pb-2 border-bottom">Dashboard</h4>

    <div class="accordion accordion-flush" id="sidebarAccordion">

      <!-- Student -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#studentMenu">
           🧑‍🎓 Student
          </button>
        </h2>
        <div id="studentMenu" class="accordion-collapse collapse" data-bs-parent="#sidebarAccordion">
          <div class="accordion-body p-0">
            <ul class="list-group list-group-flush">
              <li><a href="/addSudentPage" class="list-group-item">Add Student</a></li>
              <li><a href="/viewstud" class="list-group-item">View Student</a></li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Category -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#categoryMenu">
           📑 Category
          </button>
        </h2>
        <div id="categoryMenu" class="accordion-collapse collapse" data-bs-parent="#sidebarAccordion">
          <div class="accordion-body p-0">
            <ul class="list-group list-group-flush">
              <li><a href="/categorie" class="list-group-item">Add Category</a></li>
              <li><a href="/viewcategorie" class="list-group-item">View Category</a></li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Books -->
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#booksMenu">
           📚 Books
          </button>
        </h2>
        <div id="booksMenu" class="accordion-collapse collapse" data-bs-parent="#sidebarAccordion">
          <div class="accordion-body p-0">
            <ul class="list-group list-group-flush">
              <li><a href="#" class="list-group-item">Add Books</a></li>
              <li><a href="/viewAllBooks" class="list-group-item">View Books.</a></li>
            </ul>
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- Main Content -->
  <div class="p-4" style="flex: 1;">
    <h2>Welcome to Admin Dashboard</h2>
    
    <div class="center-message">
    <span class="spanmsg"><%= msg %></span>
  </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
