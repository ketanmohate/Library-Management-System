<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Push Down Accordion Menu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f2f5;
            box-sizing: border-box;
            width: 100%;
        }
        *{
            margin: 0px;
            padding: 0px;
        }
       
        .container-box {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
        }

        .btn {
            min-width: 150px;
            margin-bottom: 10px;
        }

        .bodycontainer{
            display: grid;
           grid-template-columns: 0.7fr 3.3fr;
            grid-template-rows: auto;
            border: black solid 2px;
        }

        .bodycontainer .dashboard {
            display: flex;
            flex-direction: column;
            align-items: start;
           height: 90vh;
            border:2px red solid ;
        }
       .dashboard .accordion{
            align-items: start;
            
        }
        
    </style>
</head>

<body>

    <div class="container-fluid p-0">
        <div class="nav-container">
            <h1>Navbar</h1>
        </div>
        <div class="bodycontainer">
            <div class="dashboard ">
                <h1 class="text-center">Dashboard</h1>
                <div class="accordion w-100 p-3" id="dashboardAccordion">

                    <!-- Student Section -->
                    <div class="accordion-item">
                        <h2 class="accordion-header " id="headingStudent">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseStudent" aria-expanded="false" aria-controls="collapseStudent">
                                Student
                            </button>
                        </h2>
                        <div id="collapseStudent" class="accordion-collapse collapse" aria-labelledby="headingStudent"
                            data-bs-parent="#dashboardAccordion">
                            <div class="accordion-body">
                                <a href="#" class="btn btn-outline-primary ">Add Student</a>
                                <a href="#" class="btn btn-outline-primary ">View Student</a>
                            </div>
                        </div>
                    </div>

                    <!-- Category Section -->
                    <div class="accordion-item mt-3">
                        <h2 class="accordion-header" id="headingCategory">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseCategory" aria-expanded="false"
                                aria-controls="collapseCategory">
                                Category
                            </button>
                        </h2>
                        <div id="collapseCategory" class="accordion-collapse collapse" aria-labelledby="headingCategory"
                            data-bs-parent="#dashboardAccordion">
                            <div class="accordion-body">
                                <a href="#" class="btn btn-outline-success  mb-2">Add Category</a>
                                <a href="#" class="btn btn-outline-success ">View Category</a>
                            </div>
                        </div>
                    </div>

                    <!-- Books Section -->
                    <div class="accordion-item mt-3 ">
                        <h2 class="accordion-header" id="headingBooks">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseBooks" aria-expanded="false" aria-controls="collapseBooks">
                                Books
                            </button>
                        </h2>
                        <div id="collapseBooks" class="accordion-collapse collapse" aria-labelledby="headingBooks"
                            data-bs-parent="#dashboardAccordion">
                            <div class="accordion-body">
                                <a href="#" class="btn btn-outline-danger mb-2">Add Books</a>
                                <a href="#" class="btn btn-outline-danger ">View Books</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="row">
                <form action="">
                    <input type="text"><input type="text"><input type="text"><input type="text">
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        crossorigin="anonymous"></script>

</body>

</html>