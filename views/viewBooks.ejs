<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Book Gallery</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/css/viewBooks.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
  <%- include('homeNav') %>
  <br>
  <h1>ðŸ“š Welcome to The Knowledge Hub</h1>

  <!-- Books -->
   
  <div id="bookContainer" class="book-container">
    <% books.forEach((book,index) => { %>
      <div class="book-card book-item">
        <img src="/images/<%= book.image %>" alt="Book Image" />
         <%= (index+1) %>
        <div class="book-details">
          <div class="book-title">
            <%= book.title %>
          </div>
          <div class="book-description">
            <strong>Author:</strong> <%= book.author %><br />
            <strong>Publisher:</strong> <%= book.publisher %><br />
            <strong>Category:</strong> <%= book.category %>
          </div>
        </div>

        <!-- Action buttons -->
        <div class="book-actions">
          <a href="/deletebook?id=<%= book.id %>" class="btn btn-danger btn-sm">DELETE</a>
          <a href="/beforeUpdateBook?id=<%= book.id %>" class="btn btn-primary btn-sm">UPDATE</a>
        </div>
      </div>
    <% }); %>
    
  </div>

  <!-- Pagination -->
  <div class="pagination">
    <button id="prevBtn" disabled>Previous</button>
    <button id="nextBtn">Next</button>
  </div>
  <br>
  <script src="/js/viewBooks.js"></script>
</body>

</html>
