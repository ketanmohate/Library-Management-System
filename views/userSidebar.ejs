<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Sidebar</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/userSidebar.css" />
</head>

<body>

    <!-- views/partials/userSidebar.ejs -->
    <div class="sidebar">
        <div class="sidebar-title">User Dashboard</div>

        <div class="accordion" id="sidebarAccordion">
            <!-- View Books -->
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#viewBooksMenu">
                        <i class="bi bi-book-half me-2"></i> View Books
                    </button>
                </h2>
                <div id="viewBooksMenu" class="accordion-collapse collapse" data-bs-parent="#sidebarAccordion">
                    <div class="accordion-body">
                        <a href="/userViewBooks" class="dropdown-link"><i class="bi bi-eye me-2"></i>All Books</a>
                    </div>
                </div>
            </div>

            <!-- Issued Books -->
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#issuedMenu">
                        <i class="bi bi-journal-arrow-up me-2"></i> Issued Books
                    </button>
                </h2>
                <div id="issuedMenu" class="accordion-collapse collapse" data-bs-parent="#sidebarAccordion">
                    <div class="accordion-body">
                        <a href="/issuedBooksUser" class="dropdown-link"><i class="bi bi-arrow-right-circle me-2"></i>My
                            Issued Books</a>
                    </div>
                </div>
            </div>

            <!-- History -->
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#historyMenu">
                        <i class="bi bi-clock-history me-2"></i> History
                    </button>
                </h2>
                <div id="historyMenu" class="accordion-collapse collapse" data-bs-parent="#sidebarAccordion">
                    <div class="accordion-body">
                        <a href="/userHistory" class="dropdown-link"><i class="bi bi-clipboard-data me-2"></i>Borrowing
                            History</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/adminSidebar.js"></script>
</body>

</html>