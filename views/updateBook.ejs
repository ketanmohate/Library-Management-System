<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add Book</title>
  <link rel="stylesheet" href="/css/addBookForm.css" />
</head>
<body>
  <%- include('adminNav.ejs') %>

  <div class="Fcontiner">
    <div class="fSidebar">
      <%- include('adminSidebar.ejs') %>
    </div>

    <div class="fMainContent">
      <div class="form-wrapper dark-theme">
        <h2 class="form-heading">📘 Add Books</h2>

        <form action="/addBook" method="POST" enctype="multipart/form-data" class="book-form">
          <div class="form-row">
            <div class="form-group">
              <label class="input-label">📘 Title</label>
              <input type="text" name="title"  value="<%=book[0].title%>" required placeholder="Enter title">
            </div>
            <div class="form-group">
              <label class="input-label">✍️ Author</label>
              <input type="text" name="author" value="<%=book[0].author%>" required placeholder="Enter author">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label class="input-label">🏢 Publisher</label>
              <input type="text" name="publisher" value="<%=book[0].publisher%>" required placeholder="Enter publisher">
            </div>
            <div class="form-group">
              <label class="input-label">🔢 ISBN</label>
              <input type="text" name="isbn" value="<%=book[0].isbn%>" required placeholder="Enter ISBN">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label class="input-label">📂 Category</label>
              <select name="category" required>
                <option value="">Select Category</option>
                <% if (categories.length === 0) { %>
                  <option value="">No data available</option>
                <% } else { categories.forEach(item => { %>
                  <option value="<%= item.name %>"><%= item.name %></option>
                <% }) } %>
              </select>
            </div>
            <div class="form-group">
              <label class="input-label">📦 Total Copies</label>
              <input type="number" name="total_copies" value="<%=book[0].total_copies%>" required placeholder="Total copies">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label class="input-label">📚 Available Copies</label>
              <input type="number" name="available_copies" value="<%=book[0].available_copies%>" required placeholder="Available copies">
            </div>
            <div class="form-group">
              <label class="input-label">📌 Status</label>
              <select name="status" required>
                <option value="available">Available</option>
                <option value="unavailable">Unavailable</option>
              </select>
            </div>
          </div>

          <div class="form-row">
            <div class="custom-file-upload">
              <label for="image">📁 Upload Book Image</label>
              <input type="file" id="image" name="image" required>
              <span id="file-chosen">No file chosen</span>
            </div>

            <div class="form-group">
              <label class="input-label" style="opacity:0;">Submit</label>
              <button type="submit" class="btn-submit">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    window.onload = function () {
      const fileInput = document.getElementById('image');
      const fileChosen = document.getElementById('file-chosen');
      fileInput.addEventListener('change', function () {
        fileChosen.textContent = this.files[0]?.name || 'No file chosen';
      });
    };
  </script>
</body>
</html>
